{% set container = theme.settings.fluid_container ? 'container-fluid' : 'container' %}
{%
    set navbar_classes = [
    'navbar', 'navbar-expand-lg', 'navbar-light', 'bg-light',
]
%}

<div class="{{ container }}">

    <header>
        <nav {{ navbar_attributes.addClass(navbar_classes)}}>
          <div class="text-center text-md-left mb-2 mb-md-0">
            {{ page.site_name }}
          </div>

            <button class="navbar-toggler mb-2" type="button" data-toggle="collapse" data-target="#side-nav" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse justify-content-end" id="side-nav">
                  {{ page.header_navigation }}
            </div>
        </nav>
    </header>








    <section>
        <hr>
        <nav {{ navbar_attributes.addClass(navbar_classes)}}>
            <button class="navbar-toggler mb-2" type="button" data-toggle="collapse" data-target="#main-nav" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse " id="main-nav">
              <div class="w-100">
                {{ page.section_navigation }}
              </div>
            </div>
        </nav>

        <div class="row py-5">
            <div class="col-lg-8">
                <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">

                    <div class="carousel-inner">
                      <div class="main-carousel">
                        {{ page.main_carousel }}
                      </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 mt-3 mt-lg-0">
                <div class="d-flex align-items-end">
                    <h3>{{ page.events_title}}</h3>
                    <h5 class="ml-auto"><a href="/all-events">{{ page.events_all }}</a></h5>
                </div>
                <hr class="mt-0">
                <div class="list-group">
                    {{ page.events_upcoming }}
                </div>
                <a id="registration" href="#" class="btn btn-primary d-block mt-3">Registruotis į renginį</a>
            </div>
        </div>
    </section>

    <main>
        {% if not is_front %}
            <div>
                <hr class="mt-0">
                {{ page.content }}
            </div>
        {% else %}
            <div class="d-flex justify-content-between align-items-end">
                <h3>{{ page.news_title }}</h3>
                <h5><a href="/news-archive">{{ page.news_archive }}</a></h5>
            </div>
            <hr class="mt-0">
            <div class="articles">
                {{ page.news }}
            </div>
        {% endif %}
    </main>

    <section>
        <article>
            <div class="d-flex align-items-end">
                <h3>{{ page.gallery_title }}</h3>
                <h5 class="ml-auto"><a href="/gallery-archive">{{ page.gallery_archive }}</a></h5>
            </div>
            <hr class="mt-0">
            <div class="gallery-images-carousel">
                {{ page.gallery_carousel }}
            </div>
        </article>
        <article class="my-5">
            <div class="row">
                <div class="col-lg-6">
                    <h3>{{ page.collaborations_title }}</h3>
                    <hr class="mt-0">

                    <div class="collaborators-grid">
                        {{ page.collaborations }}
                    </div>

                </div>

                <div class="col-lg-6">
                    <h3>{{ page.links_title }}</h3>
                    <hr class="mt-0">
                    <div class="list-group">
                        {{ page.links }}
                    </div>

                </div>
            </div>

        </article>
    </section>

    <footer>
        <hr>
        <div class="row align-items-center">
            <div class="col-6 col-lg-4">
              {{ page.footer_website }}
            </div>
            <div class="col-6 col-lg-8 address">
              {{ page.footer_address }}
            </div>
        </div>
    </footer>
</div>
